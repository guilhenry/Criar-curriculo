<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviwActivity">


    <ScrollView
        android:id="@+id/scrollCurriculo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nome -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="Nome"
                android:textColor="#1F1F1F"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Contato -->
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Telefone:   |   Email: "
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <!-- Linha -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#000000" />

            <!-- INFORMAÇÕES PESSOAIS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="INFORMAÇÕES PESSOAIS"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoPessoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text=" Seu Endereço aqui"
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <!-- Linha -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#000000" />

            <!-- FORMAÇÃO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="FORMAÇÃO"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFormacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Sua formação"
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <!-- Linha -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#000000" />

            <!-- CURSOS -->

            <TextView
                android:id="@+id/fixcr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="CURSOS"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCursos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Seus Cursos"
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <!-- Linha -->
            <View
                android:id="@+id/fixcr1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#000000" />

            <!-- EXPERIÊNCIA -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="EXPERIÊNCIA PROFISSIONAL"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvExperiencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Suas experiencias aqui"
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <!-- Botão PDF -->
            <Button
                android:id="@+id/btnExportPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#006BC3"
                android:text="Exportar para PDF"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
